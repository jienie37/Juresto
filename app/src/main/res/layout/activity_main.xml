<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Image with overlay title -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/image_background">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/restaurant_logo_by_koko_store_580x386"
                    android:contentDescription="Restaurant Logo" />

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#80000000"
                    android:text="Juresto"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="12dp" />
            </FrameLayout>

            <!-- Order Button -->
            <Button
                android:id="@+id/btnOrderNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🍽️ Order Now"
                android:textSize="18sp"
                android:backgroundTint="#FF5722"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:elevation="6dp"
                android:padding="12dp" />

            <!-- Recent Orders Button -->
            <Button
                android:id="@+id/btnRecentOrders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📜 View Recent Orders"
                android:textSize="18sp"
                android:backgroundTint="#607D8B"
                android:textColor="#FFFFFF"
                android:elevation="6dp"
                android:padding="12dp" />
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
