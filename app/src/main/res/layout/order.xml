<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="#FAFAFA">

    <!-- Category Buttons -->
    <LinearLayout
        android:id="@+id/categoryRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:weightSum="4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnChicken"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🍗 Chicken"
            android:backgroundTint="#FFCDD2"
            android:textColor="#000" />

        <Button
            android:id="@+id/btnSides"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🍟 Sides"
            android:backgroundTint="#FFE082"
            android:textColor="#000" />

        <Button
            android:id="@+id/btnPasta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🍝 Pasta"
            android:backgroundTint="#C5E1A5"
            android:textColor="#000" />

        <Button
            android:id="@+id/btnDrinks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🥤 Drinks"
            android:backgroundTint="#B3E5FC"
            android:textColor="#000" />
    </LinearLayout>


    <!-- Orders Box with Border -->
    <LinearLayout
        android:id="@+id/orderBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/order_border"
        android:padding="16dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/categoryRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Orders:"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <LinearLayout
                android:id="@+id/orderListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <!-- Total -->
        <TextView
            android:id="@+id/txtOrderSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Total: ₱0.00"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal" />

        <!-- Confirm and Clear Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnConfirmOrder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Confirm Order" />

            <Button
                android:id="@+id/btnClearOrders"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Clear Orders" />
        </LinearLayout>

    </LinearLayout>


    <!-- 📜 Scrollable Pasta Menu -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/orderBox"
        app:layout_constraintBottom_toTopOf="@id/btnShowOrder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- 🍝 Spaghetti -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/imgSpag"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/spag"
                        android:scaleType="centerCrop"
                        android:contentDescription="Spaghetti" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Spaghetti - ₱50"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <Button
                                android:id="@+id/btnDecreaseSpag"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="-"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/txtQuantitySpag"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="18sp" />

                            <Button
                                android:id="@+id/btnIncreaseSpag"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="+"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnAddToOrderSpag"
                            android:layout_width="231dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="#4CAF50"
                            android:text="Add"
                            android:textColor="#FFF" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 🟢 Pesto Pasta -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/imgPesto"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/pesto"
                        android:scaleType="centerCrop"
                        android:contentDescription="Pesto Pasta" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pesto Pasta - ₱60"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <Button
                                android:id="@+id/btnDecreasePesto"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="-"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/txtQuantityPesto"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="18sp" />

                            <Button
                                android:id="@+id/btnIncreasePesto"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="+"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnAddToOrderPesto"
                            android:layout_width="231dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="#4CAF50"
                            android:text="Add"
                            android:textColor="#FFF" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


    <!-- Show Orders Button -->
    <Button
        android:id="@+id/btnShowOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="📋 Show Orders"
        android:textAllCaps="false"
        android:backgroundTint="#607D8B"
        android:textColor="#FFF"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/orderBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Main Menu Button -->
    <Button
        android:id="@+id/btnMainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        app:layout_constraintTop_toBottomOf="@id/btnShowOrder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>
