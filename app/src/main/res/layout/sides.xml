<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- 🟦 Category Buttons Row -->
    <LinearLayout
        android:id="@+id/categoryRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:weightSum="4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnChicken"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🍗 Chicken"
            android:backgroundTint="#FFCDD2"
            android:textColor="#000" />

        <Button
            android:id="@+id/btnSides"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🍟 Sides"
            android:backgroundTint="#FFE082"
            android:textColor="#000" />

        <Button
            android:id="@+id/btnPasta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🍝 Pasta"
            android:backgroundTint="#C5E1A5"
            android:textColor="#000" />

        <Button
            android:id="@+id/btnDrinks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🥤 Drinks"
            android:backgroundTint="#B3E5FC"
            android:textColor="#000" />
    </LinearLayout>

    <!-- ⬇ Scrollable Content for Menu Items -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/categoryRow"
        app:layout_constraintBottom_toTopOf="@id/btnShowOrder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- 🍔 Hamburger Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/imgBurger"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/burger"
                        android:scaleType="centerCrop"
                        android:contentDescription="Burger" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hamburger - ₱45"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <Button
                                android:id="@+id/btnDecreaseBurger"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="-"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/txtQuantityBurger"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="18sp" />

                            <Button
                                android:id="@+id/btnIncreaseBurger"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="+"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnAddToOrderBurger"
                            android:layout_width="231dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="#4CAF50"
                            android:text="Add"
                            android:textColor="#FFF" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 🍟 Fries Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/imgFries"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/fries"
                        android:scaleType="centerCrop"
                        android:contentDescription="Fries" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="French Fries - ₱30"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <Button
                                android:id="@+id/btnDecreaseFries"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="-"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/txtQuantityFries"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="18sp" />

                            <Button
                                android:id="@+id/btnIncreaseFries"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="+"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnAddToOrderFries"
                            android:layout_width="231dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="#4CAF50"
                            android:text="Add"
                            android:textColor="#FFF" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- 📋 Show Order Button -->
    <Button
        android:id="@+id/btnShowOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="📋 Show Orders"
        android:textAllCaps="false"
        android:backgroundTint="#607D8B"
        android:textColor="#FFF"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
